# 配置文件模板
# 使用方法：复制此文件为 src/config.yaml 并填入实际配置

# 数据库配置
database:
  host: "your-database-host"
  username: "your-username"
  password: "your-password"
  database_name: "pillow_customer_prod"

# 日志配置
logger:
  path: "logs/app.log"
  level: "INFO"
  rotation: "500 MB"
  retention: "30 days"
  format: "<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>"

# 模型API配置示例
autodl:
  base_url: "https://your-api-url/v1/chat/completions"
  model: "your-model-name"
  api_key: "your-api-key"

qwen_max:
  base_url: "https://dashscope.aliyuncs.com/compatible-mode/v1/chat/completions"
  model: "qwen-max"
  api_key: "your-qwen-api-key"

qwen_plus:
  base_url: "https://dashscope.aliyuncs.com/compatible-mode/v1/chat/completions"
  model: "qwen-plus"
  api_key: "your-qwen-api-key"

# 其他模型配置...
deepseek:
  base_url: "https://api.deepseek.com/v1/chat/completions"
  model: "deepseek-chat"
  api_key: "your-deepseek-api-key"

# 持久化记忆配置（MySQL chat_memory表 - LLM提取的短期/长期记忆）
persistent_memory:
  enabled: true  # 是否启用持久化记忆功能
  short_term_update_interval: 10  # 每N轮对话更新一次短期记忆
  enabled_characters:  # 启用记忆的角色列表（空列表=全部启用）
    # - "default"  # 取消注释以仅对指定角色启用
    # - "c1s1c1_0001"

# 向量数据库配置（额外记忆 - 语义检索，可选）
vector_db:
  enabled: false  # 是否启用向量数据库
  url: "http://your-qdrant-url:6333"
  api_key: "your-qdrant-api-key"
  collection_name: "conversations"
  embedding_api_key: "your-embedding-api-key"
  embedding_url: "https://api.siliconflow.cn/v1/embeddings"

# 语音合成API配置
speech_api:
  appid: "your-appid"
  access_token: "your-access-token"
  cluster: "your-cluster"
  voice_type: "your-voice-type"

# OSS配置
oss_key:
  access_key_id: "your-access-key-id"
  access_key_secret: "your-access-key-secret"
  endpoint: "oss-cn-shanghai.aliyuncs.com"
  bucket_name: "your-bucket-name"

